<h2><%= book.title %></h2>

<img width = "100" height="150" src="<%= book.coverImagePath %>" alt="">

<div>
  Author : <%= book.author.name %>
</div>
<div>
  Publish Date : <%= book.publishDate.toDateString() %>
</div>
<div>
  Page Count : <%= book.pageCount %>
</div>

<div>
  Description : <%= book.description %>
</div>

<a href="/books/<%= book.id %>/edit">Edit</a>
<form  method="POST" action="/books/<%= book.id %>?_method=DELETE">
  <button type="submit" id="delete-btn" data-id=<%= book.id %>>Delete</button>
</form>

<a href="/authors/<%= book.author.id %>">View Author</a>