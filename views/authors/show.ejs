<h2><%= author.name %></h2>
<a href="/authors/<%= author.id %>/edit">Edit</a>
<form  method="POST" action="/authors/<%= author.id %>?_method=DELETE">
  <button type="submit" id="delete-btn" data-id=<%= author.id %>>Delete</button>
</form>

<% if(books.length > 0 ){ %>
 <h2>Books By Author</h2> 
<div>
  <% books.forEach(book => { %>
    <a href="/books/<%= book.id %>">
      <img height="150" width="100" src="<%= book.coverImagePath %>" alt="">
    </a>
  <% });  %>
</div>
<% } %>